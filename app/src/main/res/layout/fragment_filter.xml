<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    style="@style/FragmentBackground">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter Recipes"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:textColor="#000000"
        android:padding="8dp"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_cat_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"/>

    <GridLayout
        android:id="@+id/grid_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_cat_label">

        <CheckBox android:id="@+id/cb_breakfast" android:text="Breakfast" android:layout_width="wrap_content"/>
        <CheckBox android:id="@+id/cb_lunch" android:text="Lunch" android:layout_width="wrap_content"/>
        <CheckBox android:id="@+id/cb_dinner" android:text="Dinner" android:layout_width="wrap_content"/>
        <CheckBox android:id="@+id/cb_dessert" android:text="Dessert" android:layout_width="wrap_content"/>
        <CheckBox android:id="@+id/cb_snack" android:text="Snack" android:layout_width="wrap_content"/>
    </GridLayout>

    <TextView
        android:id="@+id/tv_diet_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diet"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/grid_categories"
        app:layout_constraintStart_toStartOf="parent"/>

    <GridLayout
        android:id="@+id/grid_diets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_diet_label">

        <CheckBox android:id="@+id/cb_vegan" android:text="Vegan" android:layout_width="wrap_content"/>
        <CheckBox android:id="@+id/cb_gluten_free" android:text="Gluten-Free" android:layout_width="wrap_content"/>
        <CheckBox android:id="@+id/cb_keto" android:text="Ketogenic" android:layout_width="wrap_content"/>
    </GridLayout>

    <TextView
        android:id="@+id/tv_nut_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nutritional Range"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/grid_diets"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/row_cal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_nut_label">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Calories:"/>

        <EditText
            android:id="@+id/et_cal_min"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:hint="Min"
            android:padding="8dp"
            android:background="@android:drawable/edit_text"
            android:inputType="number"/>

        <EditText
            android:id="@+id/et_cal_max"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:hint="Max"
            android:padding="8dp"
            android:background="@android:drawable/edit_text"
            android:inputType="number"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_carb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/row_cal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Carbs (g):"/>

        <EditText
            android:id="@+id/et_carb_min"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:hint="Min"
            android:padding="8dp"
            android:background="@android:drawable/edit_text"
            android:inputType="number"/>

        <EditText
            android:id="@+id/et_carb_max"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:hint="Max"
            android:padding="8dp"
            android:background="@android:drawable/edit_text"
            android:inputType="number"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_protein"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/row_carb">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Protein (g):"/>

        <EditText
            android:id="@+id/et_protein_min"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:hint="Min"
            android:padding="8dp"
            android:background="@android:drawable/edit_text"
            android:inputType="number"/>

        <EditText
            android:id="@+id/et_protein_max"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:hint="Max"
            android:padding="8dp"
            android:background="@android:drawable/edit_text"
            android:inputType="number"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_fat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/row_protein">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Fat (g):"/>

        <EditText
            android:id="@+id/et_fat_min"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:hint="Min"
            android:padding="8dp"
            android:background="@android:drawable/edit_text"
            android:inputType="number"/>

        <EditText
            android:id="@+id/et_fat_max"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:hint="Max"
            android:padding="8dp"
            android:background="@android:drawable/edit_text"
            android:inputType="number"/>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_apply_filter"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Apply Filters"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:layout_marginTop="32dp"
        app:cornerRadius="12dp"
        app:backgroundTint="@color/orange_primary"
        app:layout_constraintTop_toBottomOf="@+id/row_fat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>